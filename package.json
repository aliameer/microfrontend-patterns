{
  "name": "microfrontend-patterns",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "setup:monolith:spa-reactjs": "cd frontend/monolith-spa-react && npm install && npm run build",
    "setup:client-side:code-level-integration": "cd frontend/code-level-integration && npm install && npm run build",
    "setup:hybrid:components-registry": "./node_modules/.bin/oc dev helpers/hybrid-components-registry 3030",
    "start:dev": "DEBUG=express:*,microfrontend-patterns:* node ./bin/www",
    "start": "npm-run-all setup:*:* & npm run start:dev",
    "formatter:check": "./node_modules/.bin/prettier --check '*.js' 'bin/www' '{frontend,routes}/**/*.js' 'views/**/*.twig' 'helpers/**/*.hbs'",
    "formatter:fix": "./node_modules/.bin/prettier --write '*.js' 'bin/www' '{frontend,routes}/**/*.js' 'views/**/*.twig' 'helpers/**/*.hbs'"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "nodesi": "^1.13.0",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4",
    "twig": "~0.10.3"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "oc": "^0.48.7",
    "prettier": "2.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run formatter:fix"
    }
  }
}
