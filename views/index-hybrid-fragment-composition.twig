{% extends 'layout.twig' %} {% block body %}
<div>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">Socks Shop</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarSupportedContent"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item dropdown" id="user">
          <oc-component href="{{ componentRegistryBaseUrl }}/user">
            Failed to load user microfrontend
          </oc-component>
        </li>
        <li class="nav-item dropdown" id="carts">
          <oc-component href="{{ componentRegistryBaseUrl }}/carts">
            Failed to load carts microfrontend
          </oc-component>
        </li>
      </ul>
    </div>
  </nav>

  <div class="container pt-2" id="catalogue">
    <oc-component href="{{ componentRegistryBaseUrl }}/catalogue" x-pre-render>
      Failed to load catalogue microfrontend
    </oc-component>
  </div>
</div>
{% endblock %} {% block scripts %}
<script>
  $.ajaxSetup({
    contentType: 'application/json; charset=utf-8',
    xhrFields: {
      withCredentials: true,
    },
  });
</script>
<script src="{{ componentRegistryBaseUrl }}/oc-client/client.js"></script>
{% endblock %}
